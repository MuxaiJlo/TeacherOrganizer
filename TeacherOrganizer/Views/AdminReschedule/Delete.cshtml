@model TeacherOrganizer.Models.RescheduleModels.RescheduleRequestDto
@{
    ViewData["Title"] = "Delete Reschedule Request";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center text-danger">Delete Reschedule Request</h2>
    <div class="alert alert-warning">
        Are you sure you want to delete this reschedule request?
    </div>
    <dl class="row">
        <dt class="col-sm-3">ID</dt>
        <dd class="col-sm-9">@Model.Id</dd>
        <dt class="col-sm-3">Lesson ID</dt>
        <dd class="col-sm-9">@Model.LessonId</dd>
        <dt class="col-sm-3">Initiator</dt>
        <dd class="col-sm-9">@Model.Initiator?.UserName</dd>
        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@Model.RequestStatus</dd>
        <dt class="col-sm-3">Proposed Start</dt>
        <dd class="col-sm-9">@Model.ProposedStartTime.ToString("g")</dd>
        <dt class="col-sm-3">Proposed End</dt>
        <dd class="col-sm-9">@Model.ProposedEndTime.ToString("g")</dd>
    </dl>
    <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>