@model TeacherOrganizer.Models.DataModels.Lesson

@{
    ViewData["Title"] = "Lesson Details";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">Lesson Details</h2>
    <dl class="row">
        <dt class="col-sm-3">ID</dt>
        <dd class="col-sm-9">@Model.LessonId</dd>

        <dt class="col-sm-3">Teacher</dt>
        <dd class="col-sm-9">@Model.Teacher?.UserName</dd>

        <dt class="col-sm-3">Start Time</dt>
        <dd class="col-sm-9">@Model.StartTime.ToString("g")</dd>

        <dt class="col-sm-3">End Time</dt>
        <dd class="col-sm-9">@Model.EndTime.ToString("g")</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@Model.Status</dd>

        <dt class="col-sm-3">Description</dt>
        <dd class="col-sm-9">@Model.Description</dd>
    </dl>
    <a asp-action="Edit" asp-route-id="@Model.LessonId" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>