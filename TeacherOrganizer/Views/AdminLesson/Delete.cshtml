@model TeacherOrganizer.Models.DataModels.Lesson

@{
    ViewData["Title"] = "Delete Lesson";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center text-danger">Delete Lesson</h2>
    <div class="alert alert-warning">
        Are you sure you want to delete this lesson?
    </div>
    <dl class="row">
        <dt class="col-sm-3">ID</dt>
        <dd class="col-sm-9">@Model.LessonId</dd>
        <dt class="col-sm-3">Teacher</dt>
        <dd class="col-sm-9">@Model.Teacher?.UserName</dd>
        <dt class="col-sm-3">Start Time</dt>
        <dd class="col-sm-9">@Model.StartTime.ToString("g")</dd>
        <dt class="col-sm-3">End Time</dt>
        <dd class="col-sm-9">@Model.EndTime.ToString("g")</dd>
        <dt class="col-sm-3">Description</dt>
        <dd class="col-sm-9">@Model.Description</dd>
    </dl>
    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="LessonId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>@*
