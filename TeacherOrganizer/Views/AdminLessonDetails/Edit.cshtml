@{
}
@model TeacherOrganizer.Models.DataModels.LessonDetail
@{
    ViewData["Title"] = "Edit Lesson Detail";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">Edit Lesson Detail</h2>
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="LessonDetailsId" />
        <div class="mb-3">
            <label asp-for="LessonId" class="form-label"></label>
            <input asp-for="LessonId" class="form-control" readonly />
        </div>
        <div class="mb-3">
            <label asp-for="Content" class="form-label"></label>
            <textarea asp-for="Content" class="form-control" rows="6"></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</div>