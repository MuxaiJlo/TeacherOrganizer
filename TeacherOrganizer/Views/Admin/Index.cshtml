@{
    ViewData["Title"] = "Admin Panel";
    var navLinks = new[]
    {
        new { Title = "User Management",        Icon = "bi-people",      Url = Url.Action("Index", "AdminUser", new { area = "Admin" }) },
        new { Title = "Lesson Management",      Icon = "bi-journal",     Url = Url.Action("Index", "AdminLesson", new { area = "Admin" }) },
        new { Title = "Dictionaries",           Icon = "bi-book",        Url = Url.Action("Index", "AdminDictionary", new { area = "Admin" }) },
        new { Title = "Words",                  Icon = "bi-fonts",       Url = Url.Action("Index", "AdminWord", new { area = "Admin" }) },
        new { Title = "Lesson Details",         Icon = "bi-info-circle", Url = Url.Action("Index", "AdminLessonDetail", new { area = "Admin" }) },
        new { Title = "Reschedule Requests",    Icon = "bi-calendar2",   Url = Url.Action("Index", "AdminRescheduleRequest", new { area = "Admin" }) }
    };
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container mt-5">
    <h2 class="mb-4 text-center">Admin Panel</h2>
    <div class="row justify-content-center">
        @foreach (var link in navLinks)
        {
            <div class="col-12 col-md-6 col-lg-4 mb-4">
                <a href="@link.Url" class="text-decoration-none">
                    <div class="card shadow-sm h-100 border-0 hover-shadow">
                        <div class="card-body text-center">
                            <i class="@link.Icon fs-1 mb-3 text-primary"></i>
                            <h5 class="card-title">@link.Title</h5>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>