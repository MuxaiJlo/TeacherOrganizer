@model TeacherOrganizer.Models.ViewModels.MainViewModel
@{
    ViewData["Title"] = "Dashboard";
}
<head>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.5/main.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/dashboard.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <!-- Select2 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

    <!-- Select2 JS (після jQuery!) -->
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js" defer></script>
</head>


<body>
    <div class="dashboard-container">
        <aside class="sidebar">
            <div class="user-info">
                <img src="~/img/user.png" alt="User Icon" class="user-icon">
                <h5>@Model.Username</h5>
                <p>@Model.Role</p>
            </div>
            <nav class="menu">
                <ul>
                    <li><a href="#" data-page="calendar">📅 Calendar</a></li>
                    <li><a href="#" data-page="dictionary">📖 Dictionary</a></li>
                    <li><a href="#" data-page="settings">⚙️ Settings</a></li>
                    <li><a href="#" class="logout" onclick="handleLogout(); return false;">🚪 Logout</a></li>
                </ul>
            </nav>
        </aside>
        </aside>
        <main class="content">
            <div id="content-placeholder">
                <h2 class="text-center">Welcome, @Model.FirstName @Model.LastName!</h2>
                <p class="text-center">Select a menu item to view more details.</p>
            </div>
        </main>
        <svg class="wave" viewBox="0 0 1440 290">
            <path fill="#FFA07A" fill-opacity="1"
                  d="M0,200L80,180C160,160,320,120,480,150C640,180,800,260,960,275C1120,290,1280,240,1360,220L1440,200V290H0Z">
            </path>
        </svg>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.5/main.min.js"></script>
    <script src="~/js/dashboard.js" defer></script>
    <script type="module" src="~/js/calendar.js" defer></script>
    <script type="module" src="~/js/api_calendar.js" defer></script>
    <script type="module" src="~/js/api_dictionary.js" defer></script>
</body>