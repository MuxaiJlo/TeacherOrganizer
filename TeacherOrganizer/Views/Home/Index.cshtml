@{
    ViewData["Title"] = "Home";
}


<!-- Main content -->
<div class="container text-center content-overlay">
    <h1 class="display-3 fw-bold text-dark">Welcome to TeacherOrganizer</h1>
    <p class="lead text-dark">A modern platform for organizing the educational process</p>

    <div class="mt-4">
        <a class="btn btn-primary btn-lg" asp-controller="AuthView" asp-action="Register">Sign Up</a>
        <a class="btn btn-outline-secondary btn-lg text-dark" asp-controller="AuthView" asp-action="Login">Login</a>
    </div>
</div>

<!-- Features section -->
<section class="container mt-5 content-overlay">
    <h2 class="text-center fw-bold mb-4">Why Choose TeacherOrganizer?</h2>
    <p class="text-center">
        TeacherOrganizer is a powerful tool for tutors and students to manage lessons, vocabulary, and schedules efficiently.
        Plan, organize, and track your learning process seamlessly.
    </p>

    <div class="row mt-4">
        <div class="col-md-4 text-center">
            <img src="~/img/calendar-icon.png" alt="Lesson Calendar" class="mb-3" width="80">
            <h3>Lesson Calendar</h3>
            <p>Schedule your lessons and track them with ease in a user-friendly calendar.</p>
        </div>
        <div class="col-md-4 text-center">
            <img src="~/img/dictionary-icon.png" alt="Dictionaries" class="mb-3" width="80">
            <h3>Personal Dictionaries</h3>
            <p>Save and edit your own vocabulary lists and share them with students.</p>
        </div>
        <div class="col-md-4 text-center">
            <img src="~/img/notifications-icon.png" alt="Notifications" class="mb-3" width="80">
            <h3>Smart Notifications</h3>
            <p>Receive reminders about upcoming lessons and schedule changes.</p>
        </div>
    </div>
</section>
