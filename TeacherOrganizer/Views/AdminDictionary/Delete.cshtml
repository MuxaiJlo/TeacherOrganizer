@model TeacherOrganizer.Models.DataModels.Dictionary
@{
    ViewData["Title"] = "Delete Dictionary";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center text-danger">Delete Dictionary</h2>
    <div class="alert alert-warning">
        Are you sure you want to delete this dictionary?
    </div>
    <dl class="row">
        <dt class="col-sm-3">ID</dt>
        <dd class="col-sm-9">@Model.DictionaryId</dd>
        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Model.Name</dd>
        <dt class="col-sm-3">Owner</dt>
        <dd class="col-sm-9">@Model.User?.UserName</dd>
        <dt class="col-sm-3">Created At</dt>
        <dd class="col-sm-9">@Model.CreatedAt.ToShortDateString()</dd>
    </dl>
    <form asp-action="DeleteConfirmed" asp-route-id="@Model.DictionaryId" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>