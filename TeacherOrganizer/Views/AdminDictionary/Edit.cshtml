@model TeacherOrganizer.Models.DictionaryModels.DictionaryUpdateModel
@{
    ViewData["Title"] = "Edit Dictionary";
    var dictionaryId = ViewBag.DictionaryId;
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">Edit Dictionary</h2>
    <form asp-action="Edit" asp-route-id="@dictionaryId" method="post">
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}